#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else if [[ $# > 1 ]]; then
    exit 1
fi
    selected=$(fd . $HOME/wallpaper/ --type=f | fzf)
fi

if [[ -z $selected ]];then
    exit 1
fi

# this was the fun part
swaybg_running=$(pgrep swaybg)
if [[ $swaybg_running ]]; then
    killall swaybg
fi

swaybg -m fill -i "$selected" 1>/dev/null 2>/dev/null &
